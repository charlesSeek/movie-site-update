extends ../layout
block content
	.container
		.row
			table.table.table-hover.table-bordered
				thead
					tr
						th Category Name
						th Input Time
						th Check
						th Update
						th Delete
				tbody
					each item in categories
						tr(class="item-id-#{item._id}")
							td #{item.name}
							td #{moment(item.meta.updateAt).format('MM/DD/YYYY')}
							td: a(target="_blank",href="/category/#{item._id}") Check
							td: a(target="_blank",href="/admin/category/update/#{item._id}") Update
							td 
								button.btn.btn-danger.del(type="button",data-id="#{item._id}") Delete
	script(src="/js/admin.js")