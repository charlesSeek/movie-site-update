extends ../layout
block content
	.container
		.row
			each cat in categories
				.panel.panel-primary
					.panel-heading
						a(href='/results?cat=#{cat._id}&p=1')  
							h3(style="color:white") #{cat.name}
							
					.panel-body
						if cat.movies && cat.movies.length > 0
							each item in cat.movies
								.col-md-2
									.thumbnail
										a(href="/movie/#{item._id}")
											img(src="#{item.poster}",alt="#{item.title}" style="width:160px;height:160px")
										.caption
											h6 #{item.title}
											a.btn.btn-primary(href="/movie/#{item._id}",role="button")
												Movie Preview